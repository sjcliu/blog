<div id="post_show_content" class="skinny_wrapper wrapper_padding">
        <header>
            <p class="date"><%= @post.created_at.strftime("%A, %b %d") %></p>
            <h1><%= @post.title %></h1>
            <hr>
        </header>

        <div class="content">
            <%= @post.content%>
        </div>

        <hr>

        <div id="share_box">
            <p>Share How do I learn “X”?</p>
            <a onclick="javascript:window.open('http://twitter.com/share?text=<%= @post.title %> by @sjcliu = &amp;url=<%= url_for([@post, {only_path: false}]) %>', '_blank', 'width=800, height=500, top=200, left=300');void(0)"><i class="fa fa-twitter" aria-hidden="true"></i></a>
            <a onclick="javascript:window.open('http://facebook.com/sharer.php?u=<%= url_for([@post, {only_path: false}]) %>', '_blank', 'width=800, height=500, top=200, left=300');void(0)"><i class="fa fa-facebook" aria-hidden="true"></i></a>
            <a onclick="javascript:window.open('https://plus.google.com/share?url=<%= url_for([@post, {only_path: false}]) %>', '_blank', 'width=800, height=500, top=200, left=300');void(0)"><i class="fa fa-google-plus" aria-hidden="true"></i></a>
        </div>

        <hr>
    </div>
